<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:background="@android:color/holo_blue_bright"
    android:visibility="visible">

    <TextView
        android:id="@+id/distance"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="220dp"
        android:fontFamily="sans-serif"
        android:inputType="textCapWords"
        android:paddingLeft="10dp"
        android:textColor="@android:color/white"
        android:textSize="12sp"
        tools:text="distance" />

    <TextView
        android:id="@+id/titleConfidence"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@id/distance"
        android:layout_alignStart="@id/distance"
        android:layout_marginBottom="3dp"
        android:fontFamily="sans-serif"
        android:inputType="textCapWords"
        android:paddingLeft="10dp"
        android:textColor="@android:color/white"
        android:textSize="12sp"
        tools:text="confidance" />

    <RelativeLayout
        android:id="@+id/scoreView"
        android:layout_width="wrap_content"
        android:layout_height="195dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="5dp"
        android:background="@drawable/bg"
        android:visibility="gone"
        android:padding="10dp">

        <TextView
            android:id="@+id/description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:fontFamily="sans-serif"
            android:inputType="textCapWords"
            android:textColor="@android:color/white"
            android:textSize="24sp"
            android:textStyle="bold"
            tools:text="Description" />

        <TextView
            android:id="@+id/sell_through"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/description"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="15dp"
            android:fontFamily="sans-serif"
            android:inputType="textCapWords"
            android:text="Sell Through"
            android:textColor="@android:color/white"
            android:textSize="12sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/sell_through_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/sell_through"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="5dp"
            android:fontFamily="sans-serif"
            android:inputType="textCapWords"
            android:textColor="@android:color/white"
            android:textSize="12sp"
            tools:text="84" />

        <TextView
            android:id="@+id/margin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_below="@id/description"
            android:layout_marginRight="40dp"
            android:layout_marginTop="15dp"
            android:fontFamily="sans-serif"
            android:inputType="textCapWords"
            android:text="Margin"
            android:textColor="@android:color/white"
            android:textSize="12sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/margin_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/margin"
            android:layout_below="@id/margin"
            android:layout_marginTop="5dp"
            android:fontFamily="sans-serif"
            android:inputType="textCapWords"
            android:textColor="@android:color/white"
            android:textSize="12sp"
            tools:text="84" />


        <TextView
            android:id="@+id/buy_quantity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/sell_through_value"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="15dp"
            android:fontFamily="sans-serif"
            android:inputType="textCapWords"
            android:text="Buy Quantity"
            android:textColor="@android:color/white"
            android:textSize="12sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/buy_quantity_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignStart="@+id/buy_quantity"
            android:layout_below="@id/buy_quantity"
            android:layout_marginTop="5dp"
            android:fontFamily="sans-serif"
            android:inputType="textCapWords"
            android:textColor="@android:color/white"
            android:textSize="12sp"
            tools:text="84" />

        <TextView
            android:id="@+id/imu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@id/margin_value"
            android:layout_below="@id/margin_value"
            android:layout_marginTop="15dp"
            android:fontFamily="sans-serif"
            android:inputType="textCapWords"
            android:text="IMU"
            android:textColor="@android:color/white"
            android:textSize="12sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/imu_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/imu"
            android:layout_below="@id/imu"
            android:layout_marginTop="5dp"
            android:fontFamily="sans-serif"
            android:inputType="textCapWords"
            android:textColor="@android:color/white"
            android:textSize="12sp"
            tools:text="84" />

    </RelativeLayout>
</RelativeLayout>